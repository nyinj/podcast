<?xml version="1.0" encoding="utf-8"?>
<!-- dialog_add_podcast.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/podcastTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Podcast Title"/>

    <EditText
        android:id="@+id/podcastDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Podcast Description"/>

    <ImageView
        android:id="@+id/coverImagePreview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:visibility="gone" /> <!-- Initially hidden -->

    <Button
        android:id="@+id/btnChooseCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Cover Image"
        android:layout_marginTop="8dp"/>

</LinearLayout>
